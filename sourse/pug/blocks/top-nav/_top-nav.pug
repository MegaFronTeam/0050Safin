mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			+e.row.row
				+e.col.col-auto.col-lg.ms-auto
					.menu-mobile.menu-mobile--js
						.menu-mobile__inner
							//- +menu-toggle()
							+mnu()
							+e.link-wrap.d-lg-none
								+e.link(href='#'): +icon('whatsapp')
								+e.link(href='#'): +icon('telegram')
				.col-auto.d-none.d-lg-block: +e.link(href='#'): +icon('whatsapp')
				.col-auto.d-none.d-lg-block: +e.link(href='#'): +icon('telegram')
